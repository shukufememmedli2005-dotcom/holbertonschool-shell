#!/usr/bin/env bash
#fas

PIDFILE="/var/run/myscript.pid"
echo $$ > "$PIDFILE"

# --- Signal Handlers ---

handle_term() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

handle_int() {
    echo "Y U no love me?!"
}

handle_quit() {
    rm -f "$PIDFILE"
    exit 0
}

trap handle_term SIGTERM
trap handle_int SIGINT
trap handle_quit SIGQUIT

# --- Infinite Loop ---
while true; do
    echo "To infinity and beyond"
    sleep 1
done

