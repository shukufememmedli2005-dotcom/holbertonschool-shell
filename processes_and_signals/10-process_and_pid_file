#!/usr/bin/env bash
PID_FILE="/tmp/myscript.pid"
echo $$ > "$PID_FILE"
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}
sigint_handler() {
    echo "Y U no love me?!"
}
sigquit_handler() {
    rm -f "$PID_FILE"
    exit 0
}
trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT
while true; do
    echo "To infinity and beyond"
    sleep 1
done

