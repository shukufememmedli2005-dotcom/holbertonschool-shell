#!/usr/bin/env bash
# Creates a PID file, displays a message indefinitely, and handles signals

PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

cleanup() {
    rm -f "$PID_FILE"
    exit
}

term_handler() {
    echo "I hate the kill command"
}

int_handler() {
    echo "Y U no love me?!"
}

quit_handler() {
    cleanup
}

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT SIGTERM

while true; do
    echo "To infinity and beyond"
    sleep 2
done
